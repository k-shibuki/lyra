models/model_paths.json

# Database
*.db
*.db-journal
*.db-wal
*.db-shm

# WARC archives
*.warc
*.warc.gz

# Screenshots (runtime-generated, not documentation images)
# Note: data/ is already ignored above, so data/screenshots/ is covered
# Ignore all images by default (runtime screenshots, etc.)
*.png
*.jpg
*.jpeg
*.gif
# But allow images in docs/ and paper/ directories (documentation)
!docs/**/*.png
!docs/**/*.jpg
!docs/**/*.jpeg
!docs/**/*.gif
!docs/**/*.svg
!paper/**/*.png
!paper/**/*.jpg
!paper/**/*.jpeg
!paper/**/*.gif
!paper/**/*.svg

# Environment files
.env
.env.local
.env.*.local

# Local configuration overrides (use local.yaml.example as template)
config/local.yaml

