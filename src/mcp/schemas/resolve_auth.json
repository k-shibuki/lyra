{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:resolve_auth",
  "title": "resolve_auth Response",
  "description": "Response schema for resolve_auth tool",
  "type": "object",
  "properties": {
    "ok": { "type": "boolean" },
    "target": { "type": "string", "enum": ["item", "domain", "task"] },
    "action": { "type": "string", "enum": ["complete", "skip"] },
    "queue_id": { "type": "string", "description": "For target=item" },
    "domain": { "type": "string", "description": "For target=domain" },
    "task_id": { "type": "string", "description": "For target=task" },
    "resolved_count": { "type": "integer", "description": "For target=domain|task" },
    "success": { "type": ["boolean", "null"] },
    "_lyra_meta": { "type": "object" }
  },
  "required": ["ok", "target", "action"]
}
