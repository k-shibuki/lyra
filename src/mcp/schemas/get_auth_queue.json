{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:get_auth_queue",
  "title": "get_auth_queue Response",
  "description": "Response schema for get_auth_queue tool",
  "type": "object",
  "properties": {
    "ok": { "type": "boolean" },
    "group_by": { "type": "string", "enum": ["none", "domain", "type"] },
    "items": {
      "type": "array",
      "description": "For group_by=none: flat list of auth items",
      "items": {
        "type": "object",
        "properties": {
          "queue_id": { "type": "string" },
          "url": { "type": "string" },
          "domain": { "type": "string" },
          "auth_type": { "type": "string" },
          "priority": { "type": "string" },
          "created_at": { "type": "string" },
          "task_id": { "type": "string" }
        }
      }
    },
    "groups": {
      "type": "object",
      "description": "For group_by=domain|type: grouped items"
    },
    "total_count": { "type": "integer" },
    "_lyra_meta": { "type": "object" }
  },
  "required": ["ok", "group_by", "total_count"]
}
