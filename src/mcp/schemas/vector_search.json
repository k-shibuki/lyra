{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:vector_search",
  "title": "vector_search Response",
  "description": "Response schema for vector_search tool (semantic similarity search)",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "text_preview": {
            "type": "string",
            "description": "First 200 chars"
          },
          "similarity": {
            "type": "number"
          }
        },
        "required": ["id", "similarity"]
      }
    },
    "total_searched": {
      "type": "integer",
      "description": "Total embeddings searched"
    },
    "error": {
      "type": "string"
    }
  },
  "required": ["ok", "results", "total_searched"]
}

