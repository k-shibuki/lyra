{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:get_status",
  "title": "get_status Response",
  "description": "Response schema for get_status tool (ADR-0003: unified task/exploration status)",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "task_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["exploring", "paused", "completed", "failed"]
    },
    "query": {
      "type": "string"
    },
    "searches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "query": {"type": "string"},
          "status": {"type": "string"},
          "pages_fetched": {"type": "integer"},
          "useful_fragments": {"type": "integer"},
          "harvest_rate": {"type": "number"},
          "satisfaction_score": {"type": "number"},
          "has_primary_source": {"type": "boolean"}
        },
        "additionalProperties": false
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "total_searches": {"type": "integer"},
        "satisfied_count": {"type": "integer"},
        "total_pages": {"type": "integer"},
        "total_fragments": {"type": "integer"},
        "total_claims": {"type": "integer"},
        "elapsed_seconds": {"type": "number"}
      },
      "additionalProperties": false
    },
    "budget": {
      "type": "object",
      "properties": {
        "pages_used": {"type": "integer"},
        "pages_limit": {"type": "integer"},
        "time_used_seconds": {"type": "number"},
        "time_limit_seconds": {"type": "integer"},
        "remaining_percent": {"type": "integer"}
      },
      "additionalProperties": false
    },
    "auth_queue": {
      "type": ["object", "null"],
      "description": "Authentication queue info (may be null)"
    },
    "warnings": {
      "type": "array",
      "items": {"type": "string"}
    },
    "idle_seconds": {
      "type": "number",
      "description": "Seconds since last activity (ADR-0002). May be 0 when no exploration state exists."
    },
    "blocked_domains": {
      "type": "array",
      "description": "Blocked domains info for transparency (single-user mode).",
      "items": {
        "type": "object",
        "properties": {
          "domain": {"type": "string"},
          "blocked_at": {"type": ["string", "null"]},
          "reason": {"type": "string"},
          "cause_id": {"type": ["string", "null"]},
          "original_domain_category": {"type": ["string", "null"]},
          "domain_block_reason": {
            "type": "string",
            "enum": ["dangerous_pattern", "high_rejection_rate", "denylist", "manual", "unknown"]
          },
          "domain_unblock_risk": {
            "type": "string",
            "enum": ["high", "low"]
          },
          "restore_via": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "domain_overrides": {
      "type": "array",
      "description": "Active domain override rules from feedback tool (ADR-0012).",
      "items": {
        "type": "object",
        "properties": {
          "rule_id": {"type": "string"},
          "domain_pattern": {"type": "string"},
          "decision": {"type": "string", "enum": ["block", "unblock"]},
          "reason": {"type": "string"},
          "updated_at": {"type": "string"}
        },
        "required": ["rule_id", "domain_pattern", "decision", "reason", "updated_at"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "ok",
    "task_id",
    "status",
    "query",
    "searches",
    "metrics",
    "budget",
    "warnings",
    "idle_seconds",
    "blocked_domains",
    "domain_overrides"
  ],
  "additionalProperties": false
}

