{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:get_status",
  "title": "get_status Response",
  "description": "Response schema for get_status tool. Supports summary (default) and full detail modes for navigate workflow optimization.",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "task_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["created", "exploring", "paused", "completed", "failed"]
    },
    "hypothesis": {
      "type": "string",
      "description": "Central hypothesis to verify (ADR-0017)"
    },
    "progress": {
      "type": "object",
      "description": "Aggregated progress for navigate workflow decisions",
      "properties": {
        "searches": {
          "type": "object",
          "properties": {
            "satisfied": {"type": "integer"},
            "running": {"type": "integer"},
            "total": {"type": "integer"}
          },
          "additionalProperties": false
        },
        "queue": {
          "type": "object",
          "properties": {
            "depth": {"type": "integer"},
            "running": {"type": "integer"}
          },
          "additionalProperties": false
        },
        "jobs_by_phase": {
          "type": "object",
          "description": "Job progress grouped by phase: exploration (target_queue), verification (verify_nli), citation (citation_graph)",
          "properties": {
            "exploration": {
              "type": "object",
              "description": "target_queue jobs (search/fetch/extract pipeline)",
              "properties": {
                "queued": {"type": "integer"},
                "running": {"type": "integer"},
                "completed": {"type": "integer"},
                "failed": {"type": "integer"}
              },
              "additionalProperties": false
            },
            "verification": {
              "type": "object",
              "description": "verify_nli jobs (cross-source NLI verification)",
              "properties": {
                "queued": {"type": "integer"},
                "running": {"type": "integer"},
                "completed": {"type": "integer"},
                "failed": {"type": "integer"}
              },
              "additionalProperties": false
            },
            "citation": {
              "type": "object",
              "description": "citation_graph jobs (academic citation expansion)",
              "properties": {
                "queued": {"type": "integer"},
                "running": {"type": "integer"},
                "completed": {"type": "integer"},
                "failed": {"type": "integer"}
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "metrics": {
      "type": "object",
      "properties": {
        "total_claims": {"type": "integer"},
        "total_pages": {"type": "integer"},
        "total_fragments": {"type": "integer"},
        "elapsed_seconds": {"type": "number"}
      },
      "additionalProperties": false
    },
    "budget": {
      "type": "object",
      "properties": {
        "pages_used": {"type": "integer"},
        "pages_limit": {"type": "integer"},
        "remaining_percent": {"type": "integer"},
        "time_used_seconds": {"type": "number", "description": "Full mode only"},
        "time_limit_seconds": {"type": "integer", "description": "Full mode only"}
      },
      "additionalProperties": false
    },
    "milestones": {
      "type": "object",
      "description": "Action-readiness flags for navigate workflow. Maps to specific tools.",
      "properties": {
        "target_queue_drained": {
          "type": "boolean",
          "description": "True when all target_queue jobs done. False → get_status(wait=N)"
        },
        "nli_verification_done": {
          "type": "boolean",
          "description": "True when NLI verification done. True → query_view(v_claim_evidence_summary)"
        },
        "citation_chase_ready": {
          "type": "boolean",
          "description": "True when citation chasing ready (target_queue + citation_graph drained, no pending auth). True → queue_reference_candidates"
        }
      },
      "required": ["target_queue_drained", "nli_verification_done", "citation_chase_ready"],
      "additionalProperties": false
    },
    "waiting_for": {
      "type": "array",
      "description": "Detailed list of what's blocking progress. Empty when all ready.",
      "items": {
        "type": "object",
        "properties": {
          "kind": {
            "type": "string",
            "enum": ["target_queue", "citation_graph", "pending_auth", "verify_nli"],
            "description": "What kind of work is pending"
          },
          "status": {
            "type": "string",
            "enum": ["not_enqueued", "queued", "running", "drained", "pending"],
            "description": "Current status: not_enqueued (never submitted), queued, running, drained (done), pending (auth)"
          },
          "queued": {"type": "integer", "description": "Number of items queued (for job kinds)"},
          "running": {"type": "integer", "description": "Number of items running (for job kinds)"},
          "completed": {"type": "integer", "description": "Number of items completed (for job kinds)"},
          "count": {"type": "integer", "description": "Count for pending_auth kind"}
        },
        "required": ["kind", "status"],
        "additionalProperties": false
      }
    },
    "pending_auth_count": {
      "type": "integer",
      "description": "Number of pending auth items. >0 → get_auth_queue → resolve_auth"
    },
    "warnings": {
      "type": "array",
      "items": {"type": "string"}
    },
    "searches_detail": {
      "type": "array",
      "description": "Full mode only: detailed search list",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "query": {"type": "string"},
          "status": {"type": "string"},
          "pages_fetched": {"type": "integer"},
          "useful_fragments": {"type": "integer"},
          "harvest_rate": {"type": "number"},
          "satisfaction_score": {"type": "number"},
          "has_primary_source": {"type": "boolean"}
        },
        "additionalProperties": false
      }
    },
    "queue_items": {
      "type": "array",
      "description": "Full mode only: detailed queue items",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "query": {"type": "string"},
          "status": {"type": "string", "enum": ["queued", "running", "completed", "failed", "cancelled"]},
          "priority": {"type": "integer"},
          "created_at": {"type": ["string", "null"]},
          "started_at": {"type": ["string", "null"]},
          "completed_at": {"type": ["string", "null"]}
        },
        "additionalProperties": false
      }
    },
    "pending_auth_detail": {
      "type": ["object", "null"],
      "description": "Full mode only: detailed pending auth info",
      "properties": {
        "awaiting_auth_jobs": {"type": "integer"},
        "pending_captchas": {"type": "integer"},
        "domains": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "domain": {"type": "string"},
              "auth_types": {"type": "array", "items": {"type": "string"}},
              "count": {"type": "integer"}
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "jobs_by_kind": {
      "type": "object",
      "description": "Full mode only: job breakdown by kind",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "queued": {"type": "integer"},
          "running": {"type": "integer"},
          "completed": {"type": "integer"},
          "failed": {"type": "integer"},
          "cancelled": {"type": "integer"},
          "awaiting_auth": {"type": "integer"}
        },
        "additionalProperties": false
      }
    },
    "idle_seconds": {
      "type": "number",
      "description": "Full mode only: seconds since last activity"
    },
    "blocked_domains": {
      "type": "array",
      "description": "Full mode only: blocked domains info",
      "items": {
        "type": "object",
        "properties": {
          "domain": {"type": "string"},
          "blocked_at": {"type": ["string", "null"]},
          "reason": {"type": "string"},
          "cause_id": {"type": ["string", "null"]},
          "original_domain_category": {"type": ["string", "null"]},
          "domain_block_reason": {
            "type": "string",
            "enum": ["dangerous_pattern", "high_rejection_rate", "denylist", "manual", "unknown"]
          },
          "domain_unblock_risk": {
            "type": "string",
            "enum": ["high", "low"]
          },
          "restore_via": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "domain_overrides": {
      "type": "array",
      "description": "Full mode only: active domain override rules",
      "items": {
        "type": "object",
        "properties": {
          "rule_id": {"type": "string"},
          "domain_pattern": {"type": "string"},
          "decision": {"type": "string", "enum": ["block", "unblock"]},
          "reason": {"type": "string"},
          "updated_at": {"type": "string"}
        },
        "required": ["rule_id", "domain_pattern", "decision", "reason", "updated_at"],
        "additionalProperties": false
      }
    },
    "evidence_summary": {
      "type": "object",
      "description": "Only when status=completed: summary of collected evidence",
      "properties": {
        "total_claims": {"type": "integer"},
        "total_fragments": {"type": "integer"},
        "total_pages": {"type": "integer"},
        "supporting_edges": {"type": "integer"},
        "refuting_edges": {"type": "integer"},
        "neutral_edges": {"type": "integer"},
        "top_domains": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "ok",
    "task_id",
    "status",
    "hypothesis",
    "progress",
    "metrics",
    "budget",
    "milestones",
    "waiting_for",
    "pending_auth_count",
    "warnings"
  ],
  "additionalProperties": false
}
