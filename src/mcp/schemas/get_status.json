{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:get_status",
  "title": "get_status Response",
  "description": "Response schema for get_status tool (ADR-0003: unified task/exploration status, ADR-0010: async search queue)",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "task_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["exploring", "paused", "completed", "failed"]
    },
    "hypothesis": {
      "type": "string",
      "description": "Central hypothesis to verify (ADR-0017)"
    },
    "searches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "query": {"type": "string"},
          "status": {"type": "string"},
          "pages_fetched": {"type": "integer"},
          "useful_fragments": {"type": "integer"},
          "harvest_rate": {"type": "number"},
          "satisfaction_score": {"type": "number"},
          "has_primary_source": {"type": "boolean"}
        },
        "additionalProperties": false
      }
    },
    "queue": {
      "type": "object",
      "description": "Search queue status (ADR-0010)",
      "properties": {
        "depth": {"type": "integer", "description": "Number of queued searches"},
        "running": {"type": "integer", "description": "Number of running searches"},
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "query": {"type": "string"},
              "status": {"type": "string", "enum": ["queued", "running", "completed", "failed", "cancelled"]},
              "priority": {"type": "integer"},
              "created_at": {"type": ["string", "null"]},
              "started_at": {"type": ["string", "null"]},
              "completed_at": {"type": ["string", "null"]}
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "metrics": {
      "type": "object",
      "properties": {
        "total_searches": {"type": "integer"},
        "satisfied_count": {"type": "integer"},
        "total_pages": {"type": "integer"},
        "total_fragments": {"type": "integer"},
        "total_claims": {"type": "integer"},
        "elapsed_seconds": {"type": "number"}
      },
      "additionalProperties": false
    },
    "budget": {
      "type": "object",
      "properties": {
        "budget_pages_used": {"type": "integer"},
        "budget_pages_limit": {"type": "integer"},
        "time_used_seconds": {"type": "number"},
        "time_limit_seconds": {"type": "integer"},
        "remaining_percent": {"type": "integer"}
      },
      "additionalProperties": false
    },
    "auth_queue": {
      "type": ["object", "null"],
      "description": "Authentication queue info (may be null)"
    },
    "pending_auth": {
      "type": ["object", "null"],
      "description": "Pending authentication summary for agents (ADR-0007).",
      "properties": {
        "awaiting_auth_jobs": {"type": "integer"},
        "pending_captchas": {"type": "integer"},
        "domains": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "domain": {"type": "string"},
              "auth_types": {"type": "array", "items": {"type": "string"}},
              "count": {"type": "integer"}
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "pending_auth_count": {
      "type": "integer",
      "description": "Convenience field: number of pending auth items (e.g., CAPTCHAs)."
    },
    "warnings": {
      "type": "array",
      "items": {"type": "string"}
    },
    "idle_seconds": {
      "type": "number",
      "description": "Seconds since last activity (ADR-0002). May be 0 when no exploration state exists."
    },
    "blocked_domains": {
      "type": "array",
      "description": "Blocked domains info for transparency (single-user mode).",
      "items": {
        "type": "object",
        "properties": {
          "domain": {"type": "string"},
          "blocked_at": {"type": ["string", "null"]},
          "reason": {"type": "string"},
          "cause_id": {"type": ["string", "null"]},
          "original_domain_category": {"type": ["string", "null"]},
          "domain_block_reason": {
            "type": "string",
            "enum": ["dangerous_pattern", "high_rejection_rate", "denylist", "manual", "unknown"]
          },
          "domain_unblock_risk": {
            "type": "string",
            "enum": ["high", "low"]
          },
          "restore_via": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "domain_overrides": {
      "type": "array",
      "description": "Active domain override rules from feedback tool (ADR-0012).",
      "items": {
        "type": "object",
        "properties": {
          "rule_id": {"type": "string"},
          "domain_pattern": {"type": "string"},
          "decision": {"type": "string", "enum": ["block", "unblock"]},
          "reason": {"type": "string"},
          "updated_at": {"type": "string"}
        },
        "required": ["rule_id", "domain_pattern", "decision", "reason", "updated_at"],
        "additionalProperties": false
      }
    },
    "jobs": {
      "type": "object",
      "description": "All job kinds summary for task (ADR-0015: VERIFY_NLI, CITATION_GRAPH visibility).",
      "properties": {
        "total_queued": {"type": "integer", "description": "Total queued jobs across all kinds"},
        "total_running": {"type": "integer", "description": "Total running jobs across all kinds"},
        "total_completed": {"type": "integer", "description": "Total completed jobs across all kinds"},
        "total_failed": {"type": "integer", "description": "Total failed jobs across all kinds"},
        "by_kind": {
          "type": "object",
          "description": "Breakdown by job kind (search_queue, verify_nli, citation_graph, etc.)",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "queued": {"type": "integer"},
              "running": {"type": "integer"},
              "completed": {"type": "integer"},
              "failed": {"type": "integer"},
              "cancelled": {"type": "integer"},
              "awaiting_auth": {"type": "integer"}
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "ok",
    "task_id",
    "status",
    "hypothesis",
    "searches",
    "queue",
    "metrics",
    "budget",
    "warnings",
    "idle_seconds",
    "blocked_domains",
    "domain_overrides"
  ],
  "additionalProperties": false
}

