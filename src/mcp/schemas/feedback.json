{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:feedback",
  "title": "feedback Response",
  "description": "Response schema for feedback tool (6 actions)",
  "type": "object",
  "properties": {
    "ok": { "type": "boolean" },
    "action": { 
      "type": "string", 
      "enum": ["domain_block", "domain_unblock", "domain_clear_override", "claim_reject", "claim_restore", "edge_correct"]
    },
    "domain_pattern": { "type": "string" },
    "rule_id": { "type": "string" },
    "cleared_rules": { "type": "integer" },
    "claim_id": { "type": "string" },
    "edge_id": { "type": "string" },
    "previous_relation": { "type": "string" },
    "new_relation": { "type": "string" },
    "sample_id": { "type": "string" },
    "_lyra_meta": { "type": "object" }
  },
  "required": ["ok", "action"]
}
