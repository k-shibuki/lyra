{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:queue_searches",
  "title": "queue_searches Response",
  "description": "Response schema for queue_searches tool (ADR-0010: async search queue)",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean",
      "description": "Whether the operation succeeded"
    },
    "queued_count": {
      "type": "integer",
      "description": "Number of searches queued",
      "minimum": 0
    },
    "search_ids": {
      "type": "array",
      "items": {"type": "string"},
      "description": "IDs of queued searches (for tracking)"
    },
    "message": {
      "type": "string",
      "description": "Human-readable status message"
    }
  },
  "required": ["ok", "queued_count", "search_ids"],
  "additionalProperties": false
}

