{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:wait_for_user",
  "title": "wait_for_user Response",
  "description": "Response schema for wait_for_user tool",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "status": {
      "type": "string",
      "enum": ["notification_sent", "responded", "timeout"]
    },
    "prompt": {
      "type": "string"
    },
    "timeout_seconds": {
      "type": "integer"
    },
    "response": {
      "type": ["string", "null"],
      "description": "User response (if any)"
    },
    "message": {
      "type": "string",
      "description": "Status message"
    }
  },
  "required": ["ok", "status"],
  "additionalProperties": false
}

