{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:create_task",
  "title": "create_task Response",
  "description": "Response schema for create_task tool (ADR-0017: hypothesis-first)",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "task_id": {
      "type": "string",
      "description": "Generated task ID"
    },
    "hypothesis": {
      "type": "string",
      "description": "Central hypothesis to verify (ADR-0017)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Task creation timestamp"
    },
    "budget": {
      "type": "object",
      "properties": {
        "budget_pages": {"type": "integer"},
        "max_seconds": {"type": "integer"}
      },
      "additionalProperties": false
    },
    "message": {
      "type": "string",
      "description": "Next step instructions for AI workflow guidance"
    }
  },
  "required": ["ok", "task_id", "hypothesis", "created_at", "budget"],
  "additionalProperties": false
}

