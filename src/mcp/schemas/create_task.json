{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lyra:mcp:create_task",
  "title": "create_task Response",
  "description": "Response schema for create_task tool (Cursor may not support oneOf; keep permissive).",
  "type": "object",
  "properties": {
    "ok": { "type": "boolean" },
    "task_id": { "type": "string" },
    "hypothesis": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "budget": {
      "type": "object",
      "properties": {
        "max_pages": { "type": "integer" },
        "max_seconds": { "type": "integer" }
      },
      "additionalProperties": false
    },
    "message": { "type": "string" },
    "error_code": { "type": "string" },
    "error": { "type": "string" },
    "error_id": { "type": "string" },
    "error_type": { "type": "string" }
  },
  "required": ["ok"],
  "additionalProperties": false
}

